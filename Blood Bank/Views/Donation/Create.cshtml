<!-- Views/Donation/Create.cshtml -->
@model CreateDonationDto

<div class="container mx-auto px-4 py-8">
    <div class="max-w-2xl mx-auto">
        <h1 class="text-3xl font-bold text-gray-900 mb-6">Record New Donation</h1>

        <form asp-action="Create" class="space-y-6">
            <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm mb-4"></div>

            @* Add this hidden field *@
            <input type="hidden" asp-for="DonorId" />

            <div>
                <label asp-for="BloodType" class="block text-sm font-medium text-gray-700">Blood Type</label>
                <select asp-for="BloodType"
                        asp-items="Html.GetEnumSelectList<BloodType>()"
                        class="mt-1 block w-full py-2 px-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-primary focus:border-primary">
                    <option value="">Select Blood Type</option>
                </select>
                <span asp-validation-for="BloodType" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="Quantity" class="block text-sm font-medium text-gray-700">Quantity (ml)</label>
                <input asp-for="Quantity" type="number" min="0" max="500"
                       class="mt-1 block w-full py-2 px-3 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-primary focus:border-primary">
                <span asp-validation-for="Quantity" class="text-red-500 text-sm"></span>
            </div>

            <div class="flex justify-end space-x-4">
                <a href="@Url.Action("Index")"
                   class="px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50">
                    Cancel
                </a>
                <button type="submit"
                        class="px-4 py-2 bg-primary text-white rounded-md hover:bg-red-700">
                    Record Donation
                </button>
            </div>
        </form>
    </div>
</div>