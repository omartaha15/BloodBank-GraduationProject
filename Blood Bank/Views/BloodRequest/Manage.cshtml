@using System.Linq
@model IEnumerable<BloodBank.Core.Entities.BloodRequest>

<div class="container mx-auto px-4 py-8">
    <h2 class="text-2xl font-bold mb-4">Manage Blood Requests</h2>
    <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Hospital</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Blood Type</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Quantity (ml)</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Priority</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Required Date</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                @foreach ( var request in Model )
                {
                    <tr>
                        <td class="px-6 py-4 whitespace-nowrap">@request.Hospital.UserName</td>
                        <td class="px-6 py-4 whitespace-nowrap">@request.BloodType</td>
                        <td class="px-6 py-4 whitespace-nowrap">@request.QuantityRequired</td>
                        <td class="px-6 py-4 whitespace-nowrap">@request.Priority</td>
                        <td class="px-6 py-4 whitespace-nowrap">@request.RequiredDate.ToShortDateString()</td>
                        <td class="px-6 py-4 whitespace-nowrap">@request.Status</td>
                        <td class="px-6 py-4 whitespace-nowrap">
                            <a asp-action="Details" asp-route-id="@request.Id" class="text-blue-500 hover:text-blue-700">Details</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    @if ( !Model.Any() )
    {
        <p class="mt-4 text-gray-500">No pending requests found.</p>
    }
</div>