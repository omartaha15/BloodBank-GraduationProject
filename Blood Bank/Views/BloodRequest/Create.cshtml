@model BloodBank.Core.Entities.BloodRequest

<section class="container mx-auto px-6 py-12 max-w-2xl">
    <h2 class="text-3xl font-bold text-gray-800 mb-8 flex items-center">
        <i class="fas fa-tint text-blood-red mr-2"></i> Create Blood Request
    </h2>

    <form asp-action="Create" method="post" class="space-y-6">
        <div>
            <label class="block text-base font-medium text-gray-700">Blood Type</label>
            <select asp-for="BloodType" class="mt-1 block w-full border border-gray-300 rounded-md p-3 text-base focus:ring-blood-red focus:border-blood-red">
                @foreach ( var type in Enum.GetValues( typeof( BloodBank.Core.Enums.BloodType ) ) )
                {
                    <option value="@type">@type</option>
                }
            </select>
        </div>

        <div>
            <label class="block text-base font-medium text-gray-700">Quantity Required (mL)</label>
            <input asp-for="QuantityRequired" type="number" step="1" class="mt-1 block w-full border border-gray-300 rounded-md p-3 text-base focus:ring-blood-red focus:border-blood-red" />
        </div>

        <div>
            <label class="block text-base font-medium text-gray-700">Priority</label>
            <select asp-for="Priority" class="mt-1 block w-full border border-gray-300 rounded-md p-3 text-base focus:ring-blood-red focus:border-blood-red">
                @foreach ( var priority in Enum.GetValues( typeof( BloodBank.Core.Enums.RequestPriority ) ) )
                {
                    <option value="@priority">@priority</option>
                }
            </select>
        </div>

        <div>
            <label class="block text-base font-medium text-gray-700">Required Date</label>
            <input asp-for="RequiredDate" type="date" class="mt-1 block w-full border border-gray-300 rounded-md p-3 text-base focus:ring-blood-red focus:border-blood-red" />
        </div>

        <div>
            <label class="block text-base font-medium text-gray-700">Notes</label>
            <textarea asp-for="Notes" class="mt-1 block w-full border border-gray-300 rounded-md p-3 text-base focus:ring-blood-red focus:border-blood-red" rows="4"></textarea>
        </div>

        <div>
            <button type="submit" class="w-full bg-blood-red text-white font-semibold py-3 px-6 rounded-md hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-blood-red focus:ring-offset-2 transition duration-200">
                Submit Request
            </button>
        </div>
    </form>
</section>

