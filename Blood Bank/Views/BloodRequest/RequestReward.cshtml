@model BloodBank.Core.Entities.BloodRequest

<div class="container mx-auto px-4 py-8">
    <h2 class="text-2xl font-bold mb-4">Create Blood Request</h2>
    <form asp-action="Create" class="space-y-4">
        <input asp-for="HospitalId" hidden value="@User.Identity.Name" />
        <div class="form-group">
            <label asp-for="BloodType" class="block text-sm font-medium text-gray-700">Blood Type</label>
            <select asp-for="BloodType" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
                @foreach ( var type in Enum.GetValues( typeof( BloodBank.Core.Enums.BloodType ) ) )
                {
                    <option value="@type">@type</option>
                }
            </select>
        </div>
        <input asp-for="QuantityRequired" value="450 class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" type ="hidden"/>
        <div class="form-group">
            <label asp-for="Priority" class="block text-sm font-medium text-gray-700">Priority</label>
            <select asp-for="Priority" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm">
                @foreach ( var priority in Enum.GetValues( typeof( BloodBank.Core.Enums.RequestPriority ) ) )
                {
                    <option value="@priority">@priority</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label asp-for="RequiredDate" class="block text-sm font-medium text-gray-700">Required Date</label>
            <input asp-for="RequiredDate" type="date" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" />
        </div>
        <div class="form-group">
            <label asp-for="Notes" class="block text-sm font-medium text-gray-700">Notes</label>
            <textarea asp-for="Notes" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm"></textarea>
        </div>
        <button type="submit" class="w-full bg-indigo-600 text-white py-2 px-4 rounded-md hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">Submit Request</button>
    </form>
</div>