<!-- Views/Hospital/Create.cshtml -->
@model CreateHospitalDto

<div class="container mx-auto px-4 py-8">
    <div class="max-w-3xl mx-auto">
        <div class="mb-6">
            <h1 class="text-3xl font-bold text-gray-900">Add New Hospital</h1>
            <p class="mt-2 text-gray-600">Create a new hospital account and set up their credentials.</p>
        </div>

        <form asp-action="Create" class="bg-white shadow-md rounded-lg overflow-hidden">
            <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm px-6 py-4 bg-red-50"></div>

            <!-- Hospital Information Section -->
            <div class="p-6 space-y-6">
                <div class="border-b border-gray-200 pb-4">
                    <h2 class="text-xl font-semibold text-gray-900">Hospital Information</h2>
                    <p class="mt-1 text-sm text-gray-500">Basic information about the hospital.</p>
                </div>

                <div class="grid grid-cols-1 gap-6">
                    <!-- Hospital Name -->
                    <div>
                        <label asp-for="Name" class="block text-sm font-medium text-gray-700">
                            Hospital Name <span class="text-red-500">*</span>
                        </label>
                        <input asp-for="Name"
                               class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-primary focus:border-primary sm:text-sm"
                               placeholder="Enter hospital name">
                        <span asp-validation-for="Name" class="text-red-500 text-sm"></span>
                    </div>

                    <!-- Address -->
                    <div>
                        <label asp-for="Address" class="block text-sm font-medium text-gray-700">
                            Address <span class="text-red-500">*</span>
                        </label>
                        <textarea asp-for="Address" rows="3"
                                  class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-primary focus:border-primary sm:text-sm"
                                  placeholder="Enter complete address"></textarea>
                        <span asp-validation-for="Address" class="text-red-500 text-sm"></span>
                    </div>

                    <!-- Contact Person -->
                    <div>
                        <label asp-for="ContactPerson" class="block text-sm font-medium text-gray-700">
                            Contact Person <span class="text-red-500">*</span>
                        </label>
                        <input asp-for="ContactPerson"
                               class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-primary focus:border-primary sm:text-sm"
                               placeholder="Enter contact person name">
                        <span asp-validation-for="ContactPerson" class="text-red-500 text-sm"></span>
                    </div>

                    <!-- Contact Number -->
                    <div>
                        <label asp-for="ContactNumber" class="block text-sm font-medium text-gray-700">
                            Contact Number <span class="text-red-500">*</span>
                        </label>
                        <div class="mt-1 relative rounded-md shadow-sm">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <i class="fas fa-phone text-gray-400"></i>
                            </div>
                            <input asp-for="ContactNumber" type="tel"
                                   class="block w-full pl-10 px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-primary focus:border-primary sm:text-sm"
                                   placeholder="+1 (555) 000-0000">
                        </div>
                        <span asp-validation-for="ContactNumber" class="text-red-500 text-sm"></span>
                    </div>
                </div>
            </div>

            <!-- Account Information Section -->
            <div class="p-6 bg-gray-50 space-y-6">
                <div class="border-b border-gray-200 pb-4">
                    <h2 class="text-xl font-semibold text-gray-900">Account Information</h2>
                    <p class="mt-1 text-sm text-gray-500">Login credentials for the hospital's account.</p>
                </div>

                <div class="grid grid-cols-1 gap-6">
                    <!-- Email -->
                    <div>
                        <label asp-for="Email" class="block text-sm font-medium text-gray-700">
                            Email Address <span class="text-red-500">*</span>
                        </label>
                        <div class="mt-1 relative rounded-md shadow-sm">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <i class="fas fa-envelope text-gray-400"></i>
                            </div>
                            <input asp-for="Email" type="email"
                                   class="block w-full pl-10 px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-primary focus:border-primary sm:text-sm"
                                   placeholder="hospital@example.com">
                        </div>
                        <p class="mt-1 text-sm text-gray-500">This email will be used as the login username.</p>
                        <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
                    </div>

                    <!-- Password -->
                    <div>
                        <label asp-for="Password" class="block text-sm font-medium text-gray-700">
                            Password <span class="text-red-500">*</span>
                        </label>
                        <div class="mt-1 relative rounded-md shadow-sm">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <i class="fas fa-lock text-gray-400"></i>
                            </div>
                            <input asp-for="Password" type="password"
                                   class="block w-full pl-10 px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-primary focus:border-primary sm:text-sm">
                        </div>
                        <p class="mt-1 text-sm text-gray-500">Must be at least 8 characters long.</p>
                        <span asp-validation-for="Password" class="text-red-500 text-sm"></span>
                    </div>

                    <!-- Confirm Password -->
                    <div>
                        <label asp-for="ConfirmPassword" class="block text-sm font-medium text-gray-700">
                            Confirm Password <span class="text-red-500">*</span>
                        </label>
                        <div class="mt-1 relative rounded-md shadow-sm">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <i class="fas fa-lock text-gray-400"></i>
                            </div>
                            <input asp-for="ConfirmPassword" type="password"
                                   class="block w-full pl-10 px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-primary focus:border-primary sm:text-sm">
                        </div>
                        <span asp-validation-for="ConfirmPassword" class="text-red-500 text-sm"></span>
                    </div>
                </div>
            </div>

            <!-- Form Actions -->
            <div class="px-6 py-4 bg-gray-50 border-t border-gray-200 flex justify-end space-x-4">
                <a href="@Url.Action("Index")"
                   class="px-4 py-2 border border-gray-300 rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary">
                    Cancel
                </a>
                <button type="submit"
                        class="px-4 py-2 border border-transparent rounded-md shadow-sm text-white bg-primary hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary">
                    Create Hospital
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Add any custom JavaScript validation or functionality here
        $(document).ready(function() {
            // Example: Password strength indicator
            $('input[type="password"]').on('input', function() {
                // Add your password strength validation logic here
            });
        });
    </script>
}