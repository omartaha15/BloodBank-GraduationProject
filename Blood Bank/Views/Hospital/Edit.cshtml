<!-- Views/Hospital/Edit.cshtml -->
@model UpdateHospitalDto

<div class="container mx-auto px-4 py-8">
    <div class="max-w-2xl mx-auto">
        <h1 class="text-3xl font-bold text-gray-900 mb-6">Edit Hospital</h1>

        <form asp-action="Edit" class="space-y-6">
            <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm mb-4"></div>

            <div>
                <label asp-for="Name" class="block text-sm font-medium text-gray-700">Hospital Name</label>
                <input asp-for="Name" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-primary focus:border-primary">
                <span asp-validation-for="Name" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="Address" class="block text-sm font-medium text-gray-700">Address</label>
                <textarea asp-for="Address" rows="3" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-primary focus:border-primary"></textarea>
                <span asp-validation-for="Address" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="ContactPerson" class="block text-sm font-medium text-gray-700">Contact Person</label>
                <input asp-for="ContactPerson" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-primary focus:border-primary">
                <span asp-validation-for="ContactPerson" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="ContactNumber" class="block text-sm font-medium text-gray-700">Contact Number</label>
                <input asp-for="ContactNumber" type="tel" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-primary focus:border-primary">
                <span asp-validation-for="ContactNumber" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="Email" class="block text-sm font-medium text-gray-700">Email</label>
                <input asp-for="Email" type="email" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-primary focus:border-primary">
                <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
            </div>

            <div class="flex justify-end space-x-4">
                <a href="@Url.Action("Index")" class="px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50">
                    Cancel
                </a>
                <button type="submit" class="px-4 py-2 bg-primary text-white rounded-md hover:bg-red-700">
                    Update Hospital
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}