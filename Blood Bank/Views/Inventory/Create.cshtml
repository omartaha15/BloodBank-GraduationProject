@model BloodBank.Core.Entities.BloodUnit
@{
    ViewData [ "Title" ] = "Add Blood Unit";
}

<div class="max-w-3xl mx-auto bg-white p-8 mt-10 rounded-2xl shadow-md">
    <h2 class="text-2xl font-bold text-gray-800 mb-6">Add Blood Unit</h2>

    <form asp-action="Create" method="post" id="createForm" class="space-y-6">
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
            <!-- Blood Type -->
            <div>
                <label asp-for="BloodType" class="block text-sm font-medium text-gray-700 mb-1">Blood Type</label>
                <select asp-for="BloodType"
                        asp-items="@(new SelectList(ViewBag.BloodTypes, null, null))"
                        class="w-full rounded-lg border-gray-300 focus:ring-2 focus:ring-red-500 focus:border-red-500 shadow-sm text-sm">
                    <option value="">Select Blood Type</option>
                </select>
                <span asp-validation-for="BloodType" class="text-sm text-red-600"></span>
            </div>

            <!-- Quantity -->
            <div>
                <label asp-for="Quantity" class="block text-sm font-medium text-gray-700 mb-1">Quantity (mL)</label>
                <input asp-for="Quantity"
                       type="number"
                       step="0.1"
                       class="w-full rounded-lg border-gray-300 focus:ring-2 focus:ring-red-500 focus:border-red-500 shadow-sm text-sm" />
                <span asp-validation-for="Quantity" class="text-sm text-red-600"></span>
            </div>

            <!-- Status -->
            <div>
                <label asp-for="Status" class="block text-sm font-medium text-gray-700 mb-1">Status</label>
                <select asp-for="Status"
                        asp-items="@(new SelectList(ViewBag.Statuses, null, null))"
                        class="w-full rounded-lg border-gray-300 focus:ring-2 focus:ring-red-500 focus:border-red-500 shadow-sm text-sm">
                    <option value="">Select Status</option>
                </select>
                <span asp-validation-for="Status" class="text-sm text-red-600"></span>
            </div>

            <!-- Storage Location -->
            <div>
                <label asp-for="StorageLocation" class="block text-sm font-medium text-gray-700 mb-1">Storage Location</label>
                <input asp-for="StorageLocation"
                       class="w-full rounded-lg border-gray-300 focus:ring-2 focus:ring-red-500 focus:border-red-500 shadow-sm text-sm" />
                <span asp-validation-for="StorageLocation" class="text-sm text-red-600"></span>
            </div>

            <!-- Expiry Date -->
            <div class="sm:col-span-2">
                <label asp-for="ExpiryDate" class="block text-sm font-medium text-gray-700 mb-1">Expiry Date</label>
                <input asp-for="ExpiryDate"
                       type="date"
                       class="w-full rounded-lg border-gray-300 focus:ring-2 focus:ring-red-500 focus:border-red-500 shadow-sm text-sm" />
                <span asp-validation-for="ExpiryDate" class="text-sm text-red-600"></span>
            </div>
        </div>

        <!-- Buttons -->
        <div class="pt-4 flex justify-end space-x-4">
            <a asp-action="Index"
               class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-100 text-sm font-medium">
                Cancel
            </a>
            <button type="submit"
                    class="inline-flex items-center px-4 py-2 bg-red-600 text-white font-semibold rounded-lg hover:bg-red-700 text-sm focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
                <i class="fas fa-save mr-2"></i> Save
            </button>
        </div>
    </form>
</div>
