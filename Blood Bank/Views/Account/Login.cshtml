
@model LoginDto

<div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8">
        <div>
            <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
                Sign in to your account
            </h2>
        </div>
        <form class="mt-8 space-y-6" method="POST" asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm"></div>
            <div class="rounded-md shadow-sm -space-y-px">
                <div>
                    <label asp-for="Email" class="sr-only">Email address</label>
                    <input asp-for="Email" class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-primary focus:border-primary focus:z-10 sm:text-sm" placeholder="Email address">
                    <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
                </div>
                <div>
                    <label asp-for="Password" class="sr-only">Password</label>
                    <input asp-for="Password" type="password" class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-primary focus:border-primary focus:z-10 sm:text-sm" placeholder="Password">
                    <span asp-validation-for="Password" class="text-red-500 text-sm"></span>
                </div>
            </div>

            <div>
                <button type="submit" class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-primary hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary">
                    Sign in
                </button>
            </div>

            <div class="text-sm text-center">
                <a href="@Url.Action("Register")" class="font-medium text-primary hover:text-red-700">
                    Don't have an account? Register
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}