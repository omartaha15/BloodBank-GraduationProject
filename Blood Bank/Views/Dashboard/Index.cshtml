@model DashboardStatsDto

<div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-8">Admin Dashboard</h1>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
        <!-- Stats Cards -->
        <div class="bg-white rounded-lg shadow p-6">
            <h3 class="text-lg font-semibold text-gray-700">Total Users</h3>
            <p class="text-3xl font-bold text-primary">@Model.TotalUsers</p>
        </div>

        <div class="bg-white rounded-lg shadow p-6">
            <h3 class="text-lg font-semibold text-gray-700">Total Donors</h3>
            <p class="text-3xl font-bold text-primary">@Model.TotalDonors</p>
        </div>

        <div class="bg-white rounded-lg shadow p-6">
            <h3 class="text-lg font-semibold text-gray-700">Total Donations</h3>
            <p class="text-3xl font-bold text-primary">@Model.TotalDonations</p>
        </div>

        <div class="bg-white rounded-lg shadow p-6">
            <h3 class="text-lg font-semibold text-gray-700">Pending Appointments</h3>
            <p class="text-3xl font-bold text-primary">@Model.PendingAppointments</p>
        </div>
    </div>

    <!-- Recent Activities -->
    <div class="mt-8">
        <h2 class="text-2xl font-bold mb-4">Recent Activities</h2>
        <div class="bg-white rounded-lg shadow overflow-hidden">
            <div class="divide-y divide-gray-200">
                @foreach (var activity in Model.RecentActivities)
                {
                    <div class="p-4">
                        <p class="text-sm text-gray-600">@activity.Timestamp.ToString("g")</p>
                        <p class="font-medium">@activity.Description</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>